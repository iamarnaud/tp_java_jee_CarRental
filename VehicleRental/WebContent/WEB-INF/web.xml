<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
  <session-config>
    <session-timeout>1</session-timeout>
  </session-config>
  <servlet>
    <servlet-name>ClientServlet</servlet-name>
    <servlet-class>com.campusnumerique.vehiclerental.servlet.client.ClientServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ClientServlet</servlet-name>
    <url-pattern>/clients</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>CarServlet</servlet-name>
    <servlet-class>com.campusnumerique.vehiclerental.servlet.client.CarServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CarServlet</servlet-name>
    <url-pattern>/cars</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>CarAvailableServlet</servlet-name>
    <servlet-class>com.campusnumerique.vehiclerental.servlet.client.CarAvailableServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CarAvailableServlet</servlet-name>
    <url-pattern>/carsAvailable</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>UtilitaryAvailableServlet</servlet-name>
    <servlet-class>com.campusnumerique.vehiclerental.servlet.client.UtilitaryAvailableServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>UtilitaryAvailableServlet</servlet-name>
    <url-pattern>/utilitariesAvailable</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>MotorBikeAvailableServlet</servlet-name>
    <servlet-class>com.campusnumerique.vehiclerental.servlet.client.MotorBikeAvailableServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>MotorBikeAvailableServlet</servlet-name>
    <url-pattern>/motorBikesAvailable</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ReservationServlet</servlet-name>
    <servlet-class>com.campusnumerique.vehiclerental.servlet.client.ReservationServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ReservationServlet</servlet-name>
    <url-pattern>/reservation</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ValidationServlet</servlet-name>
    <servlet-class>com.campusnumerique.vehiclerental.servlet.client.ValidationServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ValidationServlet</servlet-name>
    <url-pattern>/validation</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>ConnexionServlet</servlet-name>
    <servlet-class>com.campusnumerique.vehiclerental.servlet.client.ConnexionServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ConnexionServlet</servlet-name>
    <url-pattern>/connexion</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>DeconnexionServlet</servlet-name>
    <servlet-class>com.campusnumerique.vehiclerental.servlet.client.DeconnexionServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>DeconnexionServlet</servlet-name>
    <url-pattern>/deconnexion</url-pattern>
  </servlet-mapping>
  
  <filter> 
  	<filter-name>ConnexionFilter</filter-name>
  	<filter-class>com.campusnumerique.vehiclerental.filters.ConnexionFilter</filter-class>
  </filter>
  <filter-mapping>
  	<filter-name>ConnexionFilter</filter-name>
  	<url-pattern>/*</url-pattern>
  </filter-mapping>
</web-app>