function buildLines(cars){
	$tbody = $('#userTable tbody');
	$tbody.empty();
	for(var count=0;count<cars.length;count++){
		var car=cars[count];
		$tr=$('<tr>');
		$brand=$('<td>');
		$model=$('<td>');
		$color=$('<td>');
		$plateNumber=$('<td>');
		$price=$('<td>');
		$kmPrice=$('<td>');
		$horsePower=$('<td>');
		
		
		$tr.append($brand);
		$tr.append($model);
		$tr.append($color);
		$tr.append($plateNumber);
		$tr.append($price);
		$tr.append($kmprice);
		$tr.append($horsePower);
		$tbody.append($tr);
	}
}

function buildEmptyLine(){
	$tbody = $('#userTable tbody');
	$tbody.empty();
	$tbody.append($("<tr><th colspan='100%'>No data found</th></tr>"))
}
$( document ).ready(function() {
	$.ajax({
		url:"../CarServlet",
		data:{
			 action:"getCars"
		 }
	})
	.done(function(data) {
		if(data!=undefined && data.cars!=undefined && data.cars.length>0 ){
			buildLines(data.cars);
		}
		else{
			buildEmptyLine();
		}
  })
})